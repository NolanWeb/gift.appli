<h1>Create a New Prestation for Box</h1>
    <form method="post" action="/boxes/{{ box_id }}/add-prestation">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

        <label for="libelle">Prestation Name</label>
        <input type="text" id="libelle" name="libelle" required>

        <label for="description">Description</label>
        <textarea id="description" name="description" required></textarea>

        <label for="unite">Unite</label>
        <input type="text" id="unite" name="unite">

        <label for="tarif">Tarif</label>
        <input type="number" step="0.01" id="tarif" name="tarif">

        <label for="img">Image</label>
        <input type="text" id="img" name="img">

        <label for="quantite">Quantity</label>
        <input type="number" id="quantite" name="quantite" required>

        <input type="submit" value="Add Prestation">